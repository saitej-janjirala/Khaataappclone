<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mtoprelative"
        >
        <TextView
            android:id="@+id/mcontentscustomername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/robotomedium"
            android:background="#ffffff"
            android:textSize="15sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mcontentscustomername"
            android:gravity="center_horizontal"
            android:background="#ffffff">
            <androidx.cardview.widget.CardView
                android:id="@+id/getcard"
                android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/mgetamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:elevation="2dp"
                        android:textAlignment="center"
                        android:textColor="#e53935"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/getamountdash"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#607D8B"
                        android:layout_below="@id/mgetamount"/>
                    <TextView
                        android:id="@+id/getamounttext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textAlignment="center"
                        android:text="@string/getamounttext"
                        android:textColor="#e53935"
                        android:textSize="15sp"
                        android:layout_below="@+id/getamountdash"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/givecard"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/getcard"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/mgiveamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:elevation="2dp"
                        android:textAlignment="center"
                        android:textColor="#388E3C"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_below="@+id/mgiveamount"
                        android:id="@+id/giveamountdash"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#607D8B"/>
                    <TextView
                        android:id="@+id/giveamounttext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textAlignment="center"
                        android:text="@string/giveamounttext"
                        android:textColor="#388E3C"
                        android:textSize="15sp"
                        android:layout_below="@+id/giveamountdash"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView>